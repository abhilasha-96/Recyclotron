    section#hero.section
      .container
        .row
          .col-md-7.col-sm-6.hero
            .hero-content
              h1 Sell your old laptop today
              form
                .form-group
                label(for='exampleInputEmail1') Email address
                input#exampleInputEmail1.form-control(type='email', aria-describedby='emailHelp', placeholder='Enter email')
                small#emailHelp.form-text.text-muted We'll never share your email with anyone else.
                .form-group
                label(for='exampleInputPassword1') Password
                input#exampleInputPassword1.form-control(type='password', placeholder='Password')
                .form-group
                label(for='exampleSelect1') How old is your laptop?
                select#exampleSelect1.form-control
                    option 1
                    option 2
                    option 3
                    option 4
                    option 5
                .form-group
                label(for='exampleSelect2') Select the brand
                select#exampleSelect2.form-control(multiple='')
                    option Apple
                    option Dell
                    option Lenovo
                    option HP
                    option Asus
                .form-group
                label(for='exampleTextarea') Description of your product
                textarea#exampleTextarea.form-control(rows='3')
                .form-group
                legend Some Important Checks
                .form-check
                    label.form-check-label
                    input#optionsChecks1.form-check-input(type='checkbox')
                    |        Does your laptop switch on?
                .form-check
                    label.form-check-label
                    input#optionsChecks2.form-check-input(type='checkbox')
                    |         Does the battery of your laptop work?
                .form-check.disabled
                    label.form-check-label
                    input#optionsChecks3.form-check-input(type='checkbox')
                    |         Is everything intact?
                .form-check
                button.btn.btn-primary(type='submit') Submit
 
